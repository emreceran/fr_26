<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_partner_form_saha_inherit" model="ir.ui.view">
        <field name="name">res.partner.form.saha.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <xpath expr="//form" position="replace">
                <form string="Saha Müşterisi">
                    <sheet>
                        <field name="image_1920" widget="image" class="oe_avatar" options="{&quot;preview_image&quot;: &quot;image_128&quot;}"/>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Ad Soyad / Kurum Adı"/>
                            </h1>
                        </div>

                        <group>
                            <group string="Kurumsal Detaylar">
                                <field name="sicil_no"/>
                                <field name="kimlik_no"/>
                                <field name="mobile" widget="phone"/>
                                <field name="bolge_adi"/>
                                <field name="ozel_il_id"/>
                            </group>
                        </group>

                        <group string="Saha Durumu" style="background-color: #f0f4f7; padding: 10px; border-radius: 5px;">
                            <group>
                                <field name="taraf" placeholder="Bir taraf seçiniz..." options="{'no_create': True, 'no_open': True}"/>
                            </group>
                            <group>
                                <field name="sorumlu_id" widget="many2one_avatar_user"/>
                                <field name="etiketleyen_id" readonly="1" widget="many2one_avatar_user"/>
                            </group>
                        </group>

                    </sheet>
                </form>
            </xpath>

        </field>
    </record>

    <record id="view_res_partner_filter_inherit_saha" model="ir.ui.view">
        <field name="name">res.partner.select.inherit.saha</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='type_person']" position="before">

                <filter string="Ankara Müşterileri"
                        name="filter_ankara"
                        domain="[('bolge_adi', '=', 'ankara')]"/>

                <filter string="İstanbul Müşterileri"
                        name="filter_istanbul"
                        domain="[('bolge_adi', '=', 'istanbul')]"/>

                <separator/>
            </xpath>

            <xpath expr="//group" position="inside">
                <filter string="Bölgeye Göre"
                        name="group_by_bolge"
                        context="{'group_by': 'bolge_adi'}"/>
            </xpath>
        </field>
    </record>


    <record id="view_saha_il_tree" model="ir.ui.view">
        <field name="name">saha.il.list</field>
        <field name="model">saha.il</field>
        <field name="arch" type="xml">
            <list string="İller" editable="bottom">
                <field name="code"/>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="action_saha_il" model="ir.actions.act_window">
        <field name="name">İller</field>
        <field name="res_model">saha.il</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_saha_il_contact"
              name="İller"
              parent="contacts.res_partner_menu_config"
              action="action_saha_il"
              sequence="10"/>

</odoo>